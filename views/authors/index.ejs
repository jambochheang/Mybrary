<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit" class="cta">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
    <div><h4><%= author.name %></h4></div>
    <a href="/authors/<%= author.id %>" class="cta">View</a>
    <a href="/authors/<%= author.id %>/edit" class="cta">Edit</a>
    <%- include('../partials/deleteForm', 
                { url: `/authors/${author.id}` }) %> 
<% }) %> 